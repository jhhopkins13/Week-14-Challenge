<h2>{{post.title}}</h2>
<p>By {{post.author}}</p>
<p>Date: {{post.date}}</p>
<p>{{post.content}}</p>

<h3>Comments</h3>
{{#each comments}}
<div class="comment">
  <p>{{this.content}}</p>
  <p>By {{this.author}}</p>
  <p>Date: {{this.date}}</p>
</div>
{{/each}}

{{#if loggedIn}}
<form action="/post/{{post.id}}/comment" method="post">
  <label for="comment">Add a comment:</label>
  <textarea id="comment" name="comment" required></textarea>
  <button type="submit">Submit</button>
</form>
{{/if}}
